<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/gantipp"
        android:layout_width="402dp"
        android:layout_height="153dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Settings"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.218"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/home"
        android:layout_width="117dp"
        android:layout_height="99dp"
        android:scaleType="fitStart"
        android:src="@drawable/home"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="53dp"
        tools:layout_editor_absoluteY="43dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profilePic"
        android:layout_width="213dp"
        android:layout_height="248dp"
        android:layout_marginTop="272dp"
        android:src="@drawable/profile_placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/namanya"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="272dp"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Mursid"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="25pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.453"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gantiprofil"
        android:layout_width="402dp"
        android:layout_height="145dp"
        android:layout_marginTop="360dp"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Ganti Foto Profile"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="17pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.645"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="DuplicateIds" />

    <ImageView
        android:id="@+id/pinkCircle"
        android:layout_width="120px"
        android:layout_height="120px"
        android:src="@drawable/circle"
        app:layout_constraintEnd_toEndOf="@id/profilePic"
        app:layout_constraintBottom_toBottomOf="@id/profilePic"/>

    <ImageView
        android:id="@+id/tambahft"
        android:layout_width="100px"
        android:layout_height="100px"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintStart_toStartOf="@id/pinkCircle"
        app:layout_constraintEnd_toEndOf="@id/pinkCircle"
        app:layout_constraintTop_toTopOf="@id/pinkCircle"
        app:layout_constraintBottom_toBottomOf="@id/pinkCircle"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="588dp"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="crepesmursid@gmail.com"

        android:textColor="@color/white"
        android:textSize="20pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/pass"
        android:layout_width="560dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="676dp"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="crepes.enak"

        android:textColor="@color/white"
        android:textSize="20pt"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.195"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/colpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="40dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="785dp"
        tools:ignore="MissingConstraints">

        <EditText
            android:id="@+id/password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="30dp"
            android:text="Masukkan password baru"
            android:textColor="@color/light_gray"
            android:textSize="20pt" />

    </androidx.cardview.widget.CardView>

    <android.widget.Button
        android:id="@+id/simpan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:layout_marginBottom="44dp"
        android:background="@drawable/rounded_outline"
        android:fontFamily="@font/redhatdisplay_regular"
        android:text="Simpan Perubahan"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="14pt"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>