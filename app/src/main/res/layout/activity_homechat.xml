<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".HomeChat">

    <ImageView
        android:id="@+id/ImgPanah"
        android:layout_width="72dp"
        android:layout_height="72dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="12dp"/>
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/roomchat_imgProfile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/grad"
        app:layout_constraintTop_toTopOf="@+id/ImgPanah"
        app:layout_constraintStart_toEndOf="@+id/ImgPanah"
        android:layout_marginTop="1dp"
        android:layout_marginStart="12dp"/>
    <TextView
        android:id="@+id/roomchat_crush"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crush"
        android:textColor="@color/white"
        app:layout_constraintTop_toTopOf="@id/roomchat_imgProfile"
        app:layout_constraintStart_toEndOf="@id/roomchat_imgProfile"
        android:textSize="24dp"
        android:layout_marginStart="12dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="140dp"
        android:layout_marginBottom="80dp"
        android:layout_marginHorizontal="32dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Assalamualaikum Ukhti"
            android:textSize="10pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/teal_700"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waalaikumussalam"
            android:layout_gravity="end"
            android:textSize="10pt"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kamu keren"
            android:layout_marginTop="12dp"
            android:textSize="10pt"
            android:fontFamily="@font/redhatdisplay_regular"
            android:textStyle="bold"
            android:textColor="@color/teal_700"/>
    </LinearLayout>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="25dp"
        android:layout_marginEnd="80dp"
        android:textColor="@color/black"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/circle"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>